{
	"name": "Scrum for Trello",
	"version": "1.107.0",
	"description": "Adds Scrum story points to your Trello",
	"content_scripts": [
		{
			"matches": ["https://trello.com/*"],
			"js": ["jquery-2.2.4.min.js","trelloscrum.js"],
			"css": ["trelloscrum.css"]
		}
	],
	"manifest_version" : 3,
    "icons": { "128": "trello-scrum-icon.png" },
    "web_accessible_resources": [
		{
		"resources": [
				"/images/trello-scrum-icon_12x12.png",
				"/images/trello-scrum-icon_18x18.png",
				"/images/light-bulb-svgrepo-com.svg",
				"/images/wrench-svgrepo-com.svg",
				"/images/clipboard-svgrepo-com.svg"
			],
		"matches": ["<all_urls>"]
		}
	],
	"permissions": [
		"storage"
	]
}
